<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<div class="container portfolio">
  <div class="bio-info">
    <div class="row">
      <div class="col-md-6">
        <div class="row">
          <div class="col-md-12">
            <div class="bio-image">
              <img src="https://image.ibb.co/f5Kehq/bio-image.jpg" alt="image" />
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="bio-content">
          <h1>Hola, Soy {{perfil.nombres}}</h1>
          <h6>{{perfil.user_description}}</h6>
          <h6>"{{perfil.frase}}"</h6>
        </div>
      </div>
    </div>
  </div>

  <div class="bio-info">
    <div class="row">
      <div class="col-md-4">
        <div class="row">
          <div class="col-md-12">
            <p>Verificada</p>
            <p>Calificacion</p>
          </div>
        </div>
      </div>
      <div class="col-md-8">
        <div class="bio-content">
          <p>{{oferta.nombre_oferta}}</p>
          <h6>{{timeago oferta.fechaCreacion}}</h6>
          <h6>{{oferta.oferta_descripcion}}</h6>
          <div class="text-right">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal"
              data-whatever="@mdo">Solicitar</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Solicitud de servicio</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <!--<form id="subscribe-email-form" action="/solicitudes/solicitar/{{id_usuario}}/{{id_oferta}}" method="post">-->
        <form method="POST">
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Horas que necesitas:</label>
            <input type="text" class="form-control" name="tiempoOferta">
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">Descripci√≥n:</label>
            <textarea class="form-control" name="solicitud_descripcion"></textarea>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            <button type="summit" class="btn btn-primary" onclick="holi"> Aceptar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>